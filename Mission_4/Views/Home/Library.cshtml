@{
    ViewData["Title"] = "Movie Library";
}

@model List<Movies_Form>

<header class="masthead bg-primary text-white text-center">
    <h1>Welcome to Joel Hilton's Movie Library</h1>
</header>

<br />
<a asp-controller="Home" asp-action="Movies" class="btn btn-primary">Add Movie</a>
<br /><br />

<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited?</td>
            <td>Lent To:</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited?</td>
                    <td>@x.Lent</td>
                    <td>@x.Notes</td>

                    <td><a asp-controller="Home" asp-action="Edit" asp-route-movieID="@x.MovieID">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-movieID="@x.MovieID">Delete</a></td>
                </tr>
            }
    </tbody>

</table>

