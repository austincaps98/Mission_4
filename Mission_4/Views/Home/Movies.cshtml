@{
    ViewData["Title"] = "Movies";
}

@model Mission_4.Models.Movies_Form

<header class="masthead bg-primary text-white text-center">
    <h1>Enter a new movie:</h1>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryID">Category:</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Category)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select><br /><br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br /><br /> 

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option disabled selected>Choose an option</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="UR">UR</option>
            <option value="TV-14">R</option>
            <option value="TV-PG">R</option>
            <option value="TV-Y7">R</option>
            <option value="NR">R</option>
        </select><br /><br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option disabled selected>Select "Yes" or "No"</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br /><br />

        <label asp-for="Lent">Lent to:</label>
        <input asp-for="Lent" /><br /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" /><br /><br />

        <button type="submit">Add movie</button>
    </form>
</header>
